# Clawkaka reverse proxy
# Replace clawkaka.yourdomain.com with your actual domain
# Caddy auto-provisions HTTPS via Let's Encrypt

clawkaka.yourdomain.com {
	# WhatsApp webhook + backend API
	handle /whatsapp/* {
		reverse_proxy host.docker.internal:3001
	}

	handle /sandbox/* {
		reverse_proxy host.docker.internal:3001
	}

	handle /health {
		reverse_proxy host.docker.internal:3001
	}

	# Default: backend
	handle {
		reverse_proxy host.docker.internal:3001
	}
}
